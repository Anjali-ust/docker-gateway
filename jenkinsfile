pipeline {
    agent any
    tools {
        maven 'my-maven'
        jdk 'my-jdk'
    }

    stages {
        stage('Git') {
            steps {
                echo 'Pull code from Github'
                git url:'https://github.com/Anjali-ust/docker-gateway.git',branch:'main'
            }
        }
        stage('Build') {
            steps {
                echo 'Build project using maven'
                bat "mvn clean install -DskipTests"
            }
        }
        stage('Test') {
            steps {
                echo 'Test your application'
                bat "mvn test"
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploy your application'
                bat "docker build -t gateway-image ."
                bat "docker run -p 8762:8762 -d --name gateway-sr --network docker-network gateway-image"
            }
        }
    }
}